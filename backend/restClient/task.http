@BASE_URL = http://localhost:3000

# @name auth_request
POST {{BASE_URL}}/auth/login HTTP/1.1
content-type: application/json

{
    "username": "{{username}}",
    "password": "{{password}}"
}

###

@token = {{auth_request.response.body.token}}

###
GET {{BASE_URL}}/task/8d99d7c6-d47b-4705-986b-7eb0cc00ec2a HTTP/1.1
content-type: application/json
Authorization: Bearer {{token}}

###
